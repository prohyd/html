/* ===== ГЛОБАЛЬНЫЕ СТИЛИ ===== */

body
  margin auto
  padding-top 5px
  font-size 1vw


/* ===== МЕНЮ ===== */

.menu
  border-top double medium gray
  border-bottom double medium gray
  width 100%
  height 10%
  display flex
  align-items center

  &__item
    width 10%
    padding 5px
    text-align center
    box-sizing border-box

    &--highlight
      color green
      border-left 2px solid gray
      border-right 2px solid gray

    &--main
      width 60%
      text-align left
      color green


/* ===== ГАЛЕРЕЯ ===== */

.gallery
  width 90%
  height 25%
  margin 20px auto 0
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 10px

  &__big
    padding 0

    img
      width 100%
      height 100%
      object-fit cover

  &__col-small
    display grid
    grid-template-rows repeat(2, 1fr)
    gap 10px

  &__small
    img
      width 100%
      height 100%
      object-fit cover


/* ===== КРУГЛЫЕ КАРТОЧКИ ===== */

.cards
  width 90%
  padding 40px 0
  gap 13px
  margin auto
  display flex
  justify-content space-between

  &__item
    width 33.33%
    display flex
    flex-direction column
    align-items center

  &__image
    width 160px
    height 160px
    border-radius 50%
    margin 0 auto 10px

    img
      width 100%
      height 100%
      border-radius 50%
      object-fit cover

  &__title
    font-size 16px
    font-weight bold
    margin 10px 0 5px
    text-align center

  &__button
    background-color #2196F3
    color white
    border none
    border-radius 20px
    padding 8px 20px
    font-size 14px
    cursor pointer


/* ===== ТРЁХКОЛОНОЧНАЯ СЕКЦИЯ ===== */

.info-cards
  width 90%
  margin auto
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 20px
  align-items start

  &__column
    display flex
    flex-direction column
    gap 20px

    &--right
      align-items flex-end


/* ===== ОДНА ИНФО-КАРТОЧКА ===== */

.info-card
  border 2px solid #ccc
  background white
  padding 15px
  display flex
  gap 15px

  &--reverse
    flex-direction row-reverse

  &--center
    text-align center
    border 0
    flex-direction column

  &__image
    width 25%
    flex-shrink 0

    img
      width 100%
      height 100%
      object-fit cover

  &__content
    flex 1
    display flex
    flex-direction column

  &__title
    font-size 1.5vw
    font-weight bold
    margin 0 0 10px 0
    border-bottom 2px solid #333
    padding-bottom 5px

  &__text
    color #666
    line-height 1.6
    margin 10px 0 15px

  &__link
    color #8b7355
    text-decoration none
    margin-top auto


/* ===== АДАПТИВ ===== */

@media (max-width: 768px)
  body
    font-size 14px

  .menu
    display grid
    grid-template-columns 1fr 1fr
    grid-template-rows auto auto auto

    &__item--main
      grid-column 1 / 3
      width 100%
      text-align center
      border none
      padding 10px 5px

    &__item,
    &__item--highlight
      border 1px solid gray
      box-sizing border-box
      padding 10px 5px
      width auto
      display flex
      align-items center
      justify-content center
      min-height 40px

  .gallery
    height auto
    grid-template-columns 1fr
    gap 10px

    &__big
      height 250px

    &__col-small
      grid-template-rows repeat(2, 250px)

  .cards
    flex-direction column
    gap 30px

    &__item
      width 100%

  .info-cards
    grid-template-columns 1fr
    text-align center

  .info-card
    flex-direction column

    &--reverse
      flex-direction column

    &__image
      width 100%
      max-width 200px
      margin 0 auto 15px

    &__title
      font-size 18px

    &__text
      font-size 14px

  .info-cards__column--right
    align-items flex-start

/* ===== ДИНАМИЧЕСКИЕ ЭФФЕКТЫ ===== */

/* Галерея — увеличение при наведении */
.gallery__big img,
.gallery__small img
  transition transform .3s ease

  &:hover
    transform scale(1.05)

/* Меню — смена цвета при наведении */
.menu__item
  transition background-color .3s ease, color .3s ease
  cursor pointer

  &:hover
    background-color #e6ffe6
    color #006600

.menu__item--highlight:hover
  background-color #ccffcc
  color green

.menu__item--main:hover
  background-color #ccffcc
  color green

/* ===== СТРАНИЦА ОДНОГО ИЗОБРАЖЕНИЯ ===== */

.img-page
  display flex
  height 100vh

  &__left
    width 50%
    background #f3f3f3
    display flex
    justify-content center
    align-items center
    padding 20px

    img
      width 100%
      height auto
      object-fit cover
      border-radius 10px

  &__right
    width 50%
    padding 40px
    display flex
    flex-direction column
    justify-content center
    line-height 1.6

  &__back
    margin-top 30px
    padding 10px 20px
    font-size 16px
    border none
    background-color #2196F3
    color white
    border-radius 8px
    cursor pointer
    width fit-content

    &:hover
      background-color #0b76d1


/* ===== АДАПТИВ ДЛЯ img1 ===== */

@media (max-width: 768px)
  .img-page
    flex-direction column
    height auto

    &__left,
    &__right
      width 100%
      padding 20px

    &__left img
      height auto
      max-height 300px
